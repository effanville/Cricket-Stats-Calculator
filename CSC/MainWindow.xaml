<Window x:Class="CricketStatsCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Cricket Statistics v0.1" Height="465.667" Width="564.001">
    <Grid HorizontalAlignment="Left" Width="554">
        <Button Name="Add_Pl_btn" Content="Add Player" HorizontalAlignment="Left" Margin="26,98,0,0" VerticalAlignment="Top" Width="150" Click="PlayerClick" ClickMode="Press" />
        <Button Name="Add_Match_btn" Content="Add Match" HorizontalAlignment="Left" Margin="26,23,0,0" VerticalAlignment="Top" Width="150" Click="MatchClick" ClickMode="Press" />
        <Button Name="VEMatch" Content="View/Edit Match" HorizontalAlignment="Left" Margin="26,59,0,0" VerticalAlignment="Top" Width="150" Click="viewedit_match_Click" ClickMode="Press" />
        <Button Name="Stats_btn" Content="Create Statistics" HorizontalAlignment="Left" Margin="26,136,0,0" VerticalAlignment="Top" Width="150" Click="StatsClick" ClickMode="Press" />
        <Button Name="Save_btn" Content="Save Database" HorizontalAlignment="Left" Margin="26,176,0,0" VerticalAlignment="Top" Width="150" Click="SaveClick" ClickMode="Press" />
        <ListBox Name ="Players" HorizontalAlignment="Left" Height="367" Margin="195,43,0,0" VerticalAlignment="Top" Width="149"/>
        <Button Name="PopulateList" Content="GeneratePlayerList" HorizontalAlignment="Left" Margin="195,13,0,0" VerticalAlignment="Top" Width="150" Click="button1_Click" ClickMode="Press" />
        
        <Button Name="PopulateListMatch" Content="GenerateMatchList" HorizontalAlignment="Left" Margin="360,11,0,0" VerticalAlignment="Top" Width="150" Click="match_button_Click" ClickMode="Press" />

        <ListBox Name ="Matches" HorizontalAlignment="Left" Height="363" Margin="360,44,0,0" VerticalAlignment="Top" Width="150"/>

    </Grid>
</Window>
