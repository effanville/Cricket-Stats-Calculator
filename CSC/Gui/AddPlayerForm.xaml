<Window x:Class="CricketStatsCalc.AddPlayerForm"
        x:Name="AddPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CricketStatsCalc"
        Title="Add Player" 
        MinHeight="260" 
        MinWidth="260"
        Height="260" 
        Width="260">
    <StackPanel>
        <TextBlock Text="Enter player name in box then press to confirm."
                   Width="200"
                   TextWrapping="Wrap"
                   Margin="0 50 0 0">
            
        </TextBlock>
        <TextBox Name="PlayerAddBox"
                 HorizontalAlignment="Left"
                 Height="28" 
                 Margin="50,20,50,0"
                 TextWrapping="Wrap"
                 Text="{Binding NewName, Mode=TwoWay}"
                 Width="150"/>
        <Button Name="CreatePlayer" 
                Content="Submit" 
                HorizontalAlignment="Center" 
                Margin="50,20,50,10"
                Width="75" 
                IsDefault="True"
                Command ="{Binding AddThenCloseWindowCommand}"
                CommandParameter="{Binding ElementName=AddPlayerWindow}"
                 />
    </StackPanel>
</Window>
