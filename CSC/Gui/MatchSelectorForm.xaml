<Window x:Class="CricketStatsCalc.MatchSelectorForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Match Selector" Height="241.994" Width="323.953">
    <Grid Margin="0,0,7,5">
        <ComboBox Name="ChooseMatch" HorizontalAlignment="Left" Margin="91,65,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Name="CreatePlayer" Content="Submit" HorizontalAlignment="Left" Margin="57,110,0,0" VerticalAlignment="Top" Width="75" Click ="ChooseMatchClick" ClickMode="Press" RenderTransformOrigin="0.04,0.45" />
        <Button x:Name="DeleteMatch" Content="Delete Match" HorizontalAlignment="Left" Margin="162,110,0,0" VerticalAlignment="Top" Width="75" Click ="DeleteMatchClick" ClickMode="Press" RenderTransformOrigin="0.04,0.45" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="89,34,0,0" TextWrapping="Wrap" Text="Select Match to edit:" VerticalAlignment="Top" Width="123"/>
    </Grid>
</Window>
